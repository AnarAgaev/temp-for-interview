        .link-list h1 {
            color: #363636;
            font-weight: 300;
            margin-top: 60px;
        }
        .link-list ul {
            display: flex;
            flex-direction: column;
            column-gap: 20px;
            list-style: none;
        }
        .link-list ul li a  {
            position: relative;
            display: flex;
            gap: 10px;
            align-items: center;
            color: black;
            padding: 10px;
        }
        .link-list ul li a:hover {
            background: #f5f5f5;
        }
        .link-list ul li a:has([type="checkbox"])::after {
            content: '';
            display: inline-flex;
            position: relative;
            width: 20px;
            height: 20px;
            border: 1px solid rgba(0,0,0,.5);
            margin-left: auto;
            align-items: center;
            justify-content: center;
            font-size: 1.1em;
            color: rgba(0,0,0,.6);
        }
        .link-list ul li a:has([type="checkbox"]:checked)::after {
            content: '✔';
        }
        .link-list ul li a [type="checkbox"]  {
            position: absolute;
            top: 0;
            left: 0;
            z-index: -1;
            opacity: 0;
            width: 0;
            height: 0;
        }
        .link-list ul li a i {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 20px;
            height: 20px;
            background: transparent no-repeat center;
            background-image: url("data:image/svg+xml;base64,");
        }
        .link-list ul li a i.mdl {
