extends ../../template/template

include ../../components/button-play/mixin.pug

//- Variables for include this in used template
block variables
    - let title       = 'Technolight'
    - let description = 'Write description for this page here'
    - let keywords    = 'Write keywords for this page here'
    - let page        = 'contacts'

block breadcrumbs
    .section.section_breadcrumbs
        .container
            ul.breadcrumbs.animation-element
                li
                    a(href="#") Главная
                li
                    a(href="#") Компания
                li
                    span Контакты

block content
    section.section
        .contacts
            .container.container_caption.animation-element
                .row
                    .col.col-xl-8
                        h2.container_caption-text Контакты

            .container.animation-element
                .row
                    .col-12.col-lg-4
                        .contacts__card.contacts__card_data
                            h3.contacts__caption Центральный офис в Москве:
                            .contacts__description
                                .contacts__with-icon
                                    i.contacts__icon.contacts__icon_house
